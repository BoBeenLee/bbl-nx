{
  "extends": "../../tsconfig.base.json",
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "paths": {
      "~/*": ["./app/*"],
      "@bbl-nx/apis": ["../../libs/apis/src/index.ts"],
      "@bbl-nx/constants": ["../../libs/constants/src/index.ts"],
      "@bbl-nx/features": ["../../libs/features/src/index.ts"],
      "@bbl-nx/hooks": ["../../libs/hooks/src/index.ts"],
      "@bbl-nx/images": ["../../libs/images/src/index.ts"],
      "@bbl-nx/libs": ["../../libs/libs/src/index.ts"],
      "@bbl-nx/ui-components": ["../../libs/ui-components/src/index.ts"],
      "@bbl-nx/utils": ["../../libs/utils/src/index.ts"]
    },
    "isolatedModules": true
  }
}
