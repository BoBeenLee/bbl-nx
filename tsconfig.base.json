{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "@bbl-nextjs/*": ["./apps/bbl-nextjs/src/*"],
      "@bbl-nx/apis": ["libs/apis/src/index.ts"],
      "@bbl-nx/constants": ["libs/constants/src/index.ts"],
      "@bbl-nx/features/*": ["libs/features/src/lib/*"],
      "@bbl-nx/hooks": ["libs/hooks/src/index.ts"],
      "@bbl-nx/images": ["libs/images/src/index.ts"],
      "@bbl-nx/libs": ["libs/libs/src/index.ts"],
      "@bbl-nx/ui-components/*": ["libs/ui-components/src/lib/*"],
      "@bbl-nx/utils": ["libs/utils/src/index.ts"],
      "@bbl-nx/workspace-plugin": ["tools/workspace-plugin/src/index.ts"],
      "@bbl-remix/*": ["./apps/bbl-remix/app/*"]
    }
  },
  "files": ["./types/global.d.ts"],
  "exclude": ["node_modules", "tmp"]
}
