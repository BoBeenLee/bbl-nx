{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "@bbl-nextjs/*": ["./apps/bbl-nextjs/src/*"],
      "@bbl-nx/apis": ["libs/apis/src/index.ts"],
      "@bbl-nx/constants": ["libs/constants/src/index.ts"],
      "@bbl-nx/decorators": ["libs/decorators/src/index.ts"],
      "@bbl-nx/faccs": ["libs/faccs/src/index.ts"],
      "@bbl-nx/hocs": ["libs/hocs/src/index.ts"],
      "@bbl-nx/images": ["libs/images/src/index.ts"],
      "@bbl-nx/libs": ["libs/libs/src/index.ts"],
      "@bbl-nx/machines": ["libs/machines/src/index.ts"],
      "@bbl-nx/styles": ["libs/styles/src/index.ts"],
      "@bbl-nx/ui-components": ["libs/ui-components/src/index.ts"],
      "@bbl-nx/utils": ["libs/utils/src/index.ts"],
      "@bbl-remix/*": ["./apps/bbl-remix/app/*"]
    }
  },
  "files": ["./types/global.d.ts"],
  "exclude": ["node_modules", "tmp"]
}
